{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es6",
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "*": [
        "node_modules/*",
        "locale/*"
      ]
    },
    "outDir": "build"
  },
  "include": [
    "src/*"
  ]
}